@page "/fetchdata"

@using BlazorTestServerApp.Data

@using ProjectProgressLibrary.Models
@using ProjectProgressLibrary.DataAccess
@using ProjectProgressLibrary.StartConfig

@inject IStartConfig _startConfig
@inject IConFiguration config 

@inject WeatherForecastService ForecastService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                    <td>@test.ProjectId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    private IDataAccess _db;
    private string mainGoal;

    protected override async Task OnInitializedAsync()
    {
        (_db, mainGoal) = _startConfig.GetProgressDbConfig();
    }


    private WeatherForecast[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync(DateTime.Now);
    }



    ProjectModel test = new ProjectModel();

}
